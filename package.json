{
  "name": "node-ts-starter-kit",
  "version": "1.0.0",
  "description": "A boilerplate project to help you get started with node.js and typescript",
  "main": "out/index.js",
  "scripts": {
    "clean": "rimraf out coverage",
    "lint": "tslint src/**/*.ts",
    "build": "tsc -p .",
    "watch": "npm run build -- --watch",
    "pretest": "npm run build",
    "test": "npm run lint && jest --coverage",
    "start": "node out/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alpinebreeze/node-ts-starter-kit.git"
  },
  "author": "Richard Adams",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alpinebreeze/node-ts-starter-kit/issues"
  },
  "homepage": "https://github.com/alpinebreeze/node-ts-starter-kit#readme",
  "devDependencies": {
    "@types/jest": "22.1.3",
    "@types/node": "8.9.4",
    "jest": "22.3.0",
    "rimraf": "2.6.2",
    "tslint": "5.9.1",
    "typescript": "2.7.2"
  }
}
